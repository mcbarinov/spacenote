{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@demo-forums/api-types": ["./src"],
      "@demo-forums/api-types/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
